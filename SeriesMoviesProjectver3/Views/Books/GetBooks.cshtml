@model SeriesMoviesProjectver3.Models.Entity.Tbl_Books
@{
    ViewBag.Title = "GetBooks";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("UpdateBooks", "Books", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.ID)
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        <br />
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.BookName)
        @Html.TextBoxFor(x => x.BookName, new { @class = "form-control" })
        <br />
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Writer)
        @Html.TextBoxFor(x => x.Writer, new { @class = "form-control" })
        <br />
    </div>
   
    <div class="form-group">
        @Html.LabelFor(x => x.ReleaseYear)
        @Html.TextBoxFor(x => x.ReleaseYear, new { @class = "form-control" })
        <br />
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Image)
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })

        <br />
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Category)
        @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
        <br />
    </div>
    <button class="btn btn-warning">KİTAP GÜNCELLE</button>
}

